---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Chip from '@/components/ui/Chip.astro';
import GlowCard from '@/components/ui/GlowCard.astro';
import Link from '@/components/ui/Link.astro';

// 獲取最近的幾篇文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Ray's Blog - 技術分享與生活記錄"
  description='歡迎來到我的個人部落格，分享技術心得、生活感悟和學習筆記。'
  class='min-h-screen'
>
  <!-- Fixed Header -->
  <Header />

  <!-- Main Content Area -->
  <main class='mt-16'>
    <div class='max-w-4xl mx-auto px-8 py-12'>
      <!-- Hero Section with Introduction -->
      <section class='mb-16'>
        <div class='mb-8'>
          <!-- <img
            src='/images/avatar.svg'
            alt='Ray Avatar'
            class='w-32 h-32 rounded-full mx-auto mb-6 border-4 border-blue-500'
          /> -->
        </div>

        <div class='max-w-2xl mx-auto text-center'>
          <h1 class='text-2xl font-bold text-white dark:text-white mb-6'>Ray</h1>

          <p class='text-md text-slate-300 dark:text-slate-300 mb-8 leading-relaxed'>
            喜歡前端的工程師。 在這裡分享我的技術學習心得、AI 探索過程，以及一些些生活感悟。
          </p>
          <p class='text-md text-slate-300 dark:text-slate-300 mb-8 leading-relaxed'>
            這個部落格就是我拿來整理思緒、紀錄學習、偶爾碎念的地方。沒有一定多專業，但盡量寫清楚為什麼這樣做、為什麼選這個工具，能幫到正在摸索的人就更好了。
          </p>
        </div>

        <div class='flex justify-center space-x-4 mb-8'>
          <Link
            href='/blog'
            class='bg-black opacity-70 text-white px-8 py-3 rounded-lg font-semibold hover:bg-sky-800 transition-colors'
          >
            瀏覽文章
          </Link>
        </div>

        <!-- Social Links -->
        <div class='flex justify-center space-x-6'>
          <a
            href='https://github.com/ray'
            class='text-slate-400 hover:text-white transition-colors'
            target='_blank'
            rel='noopener noreferrer'
          >
            <svg
              class='w-6 h-6'
              fill='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                d='M12 0c-6.626 0-12 5.373-12 12c0 5.302 3.438 9.8 8.207 11.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416c-.546-1.387-1.333-1.756-1.333-1.756c-1.089-.745.083-.729.083-.729c1.205.084 1.839 1.237 1.839 1.237c1.07 1.834 2.807 1.304 3.492.997c.107-.775.418-1.305.762-1.604c-2.665-.305-5.467-1.334-5.467-5.931c0-1.311.469-2.381 1.236-3.221c-.124-.303-.535-1.524.117-3.176c0 0 1.008-.322 3.301 1.23c.957-.266 1.983-.399 3.003-.404c1.02.005 2.047.138 3.006.404c2.291-1.552 3.297-1.23 3.297-1.23c.653 1.653.242 2.874.118 3.176c.77.84 1.235 1.911 1.235 3.221c0 4.609-2.807 5.624-5.479 5.921c.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576c4.765-1.589 8.199-6.086 8.199-11.386c0-6.627-5.373-12-12-12z'
              ></path>
            </svg>
          </a>
          <a
            href='https://linkedin.com/in/ray'
            class='text-slate-400 hover:text-white transition-colors'
            target='_blank'
            rel='noopener noreferrer'
          >
            <svg
              class='w-6 h-6'
              fill='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                d='M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z'
              ></path>
            </svg>
          </a>
          <a
            href='https://twitter.com/ray'
            class='text-slate-400 hover:text-white transition-colors'
            target='_blank'
            rel='noopener noreferrer'
          >
            <svg
              class='w-6 h-6'
              fill='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                d='M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z'
              ></path>
            </svg>
          </a>
        </div>
      </section>

      <!-- Recent Posts Section -->
      {
        recentPosts.length > 0 && (
          <section>
            <h2 class='text-3xl font-bold dark:text-white text-gray-900 mb-8 text-center'>
              最新文章
            </h2>
            <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12'>
              {recentPosts.map(post => (
                <GlowCard
                  class='min-h-[200px]'
                  glowColor='rgba(221, 130, 246, 1)'
                  glowIntensity={600}>
                  <article class='dark:bg-slate-800/90 bg-white/90 backdrop-blur-sm rounded-lg p-6 h-full border dark:border-slate-700/50 border-gray-200/50 transition-all duration-300'>
                    <h3
                      class='text-xl font-semibold dark:text-white text-gray-900 mb-3'
                      style={`view-transition-name: post-title-${post.slug}`}>
                      <Link
                        href={`/blog/${post.slug}`}
                        class='hover:text-blue-400 transition-colors'>
                        {post.data.title}
                      </Link>
                    </h3>
                    <p class='dark:text-slate-300 text-gray-600 text-sm mb-4 line-clamp-3'>
                      {post.data.description}
                    </p>
                    <dl class='flex items-center justify-between text-xs dark:text-slate-400 text-gray-500 mt-auto'>
                      <div class='flex items-center space-x-1'>
                        <dt class='sr-only'>發布日期</dt>
                        <dd>
                          <time
                            datetime={post.data.date.toISOString()}
                            style={`view-transition-name: post-date-${post.slug}`}>
                            {new Intl.DateTimeFormat('zh-TW', {
                              year: 'numeric',
                              month: 'short',
                              day: 'numeric',
                            }).format(post.data.date)}
                          </time>
                        </dd>
                      </div>
                      {post.data.tags && post.data.tags.length > 0 && (
                        <Chip
                          tag={post.data.tags[0]}
                          href={`/blog/tag/${post.data.tags[0]}`}
                          variant='secondary'
                          size='sm'
                        />
                      )}
                    </dl>
                  </article>
                </GlowCard>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </main>
</BaseLayout>
