---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Chip from '@/components/ui/Chip.astro';
import GlowCard from '@/components/ui/GlowCard.astro';
import Link from '@/components/ui/Link.astro';
import { formatDate } from '@/utils/formatDate';
import { getReadingTime, formatReadingTime } from '@/utils/getReadingTime';

// 獲取所有部落格文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 按日期排序（最新的在前）
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// 獲取所有標籤並統計數量
const allTags = allPosts.flatMap(post => post.data.tags || []);
const tagCounts = allTags.reduce((acc, tag) => {
  acc[tag] = (acc[tag] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const uniqueTags = Object.keys(tagCounts).sort();
---

<BaseLayout 
  title="部落格 - Ray's Blog"
  description="分享技術心得與生活感悟的部落格文章"
  class="min-h-screen"
>
  <!-- Fixed Header -->
  <Header />
  
  <!-- Main Content Area -->
  <main class="mt-16">
    <div class="max-w-6xl mx-auto px-8 py-8">
      <!-- Page Header -->
      <div class="mb-4">
        <h1 class="text-4xl font-bold text-[#66F] mb-4">Articles</h1>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Article List -->
        <div class="lg:col-span-3">
          {sortedPosts.map((post) => {
            const readingTime = getReadingTime(post.body);
            return (
              <GlowCard 
                class="mb-8" 
                glowColor="rgba(244, 102, 241, 0.8)"
                glowIntensity={1200}
              >
                <article class="dark:bg-slate-800/90 bg-white/90 backdrop-blur-sm rounded-lg p-6 border dark:border-slate-700/50 border-gray-200/50 transition-all duration-300">
                  <header class="mb-4">
                    <h2 
                      class="text-2xl font-bold dark:text-white text-gray-900 mb-3"
                      style={`view-transition-name: post-title-${post.slug}`}
                    >
                      <Link href={`/blog/${post.slug}`} class="hover:text-blue-400 transition-colors">
                        {post.data.title}
                      </Link>
                    </h2>
                    
                    <!-- Meta Information -->
                    <dl class="flex items-center text-sm dark:text-slate-400 text-gray-600 mb-4 space-x-4">
                      <div class="flex items-center space-x-1">
                        <dt class="sr-only">作者</dt>
                        <dd style={`view-transition-name: post-author-${post.slug}`}>
                          作者: {post.data.author}
                        </dd>
                      </div>
                      <span>•</span>
                      <div class="flex items-center space-x-1">
                        <dt class="sr-only">發布日期</dt>
                        <dd>
                          <time 
                            datetime={post.data.date.toISOString()}
                            style={`view-transition-name: post-date-${post.slug}`}
                          >
                            {formatDate(post.data.date)}
                          </time>
                        </dd>
                      </div>
                      <span>•</span>
                      <div class="flex items-center space-x-1">
                        <dt class="sr-only">閱讀時間</dt>
                        <dd style={`view-transition-name: post-reading-time-${post.slug}`}>
                          {formatReadingTime(readingTime)}
                        </dd>
                      </div>
                    </dl>
                    
                    <!-- Tags -->
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-4">
                        {post.data.tags.map((tag) => (
                          <Chip 
                            tag={tag}
                            href={`/blog/tag/${tag}`}
                            variant="secondary"
                          />
                        ))}
                      </div>
                    )}
                  </header>
                  
                  <!-- Description -->
                  <p class="dark:text-slate-300 text-gray-700 leading-relaxed mb-4">
                    {post.data.description}
                  </p>
                  
                  <Link 
                    href={`/blog/${post.slug}`}
                    class="inline-block text-blue-400 hover:text-blue-300 font-medium transition-colors"
                  >
                    閱讀更多 →
                  </Link>
                </article>
              </GlowCard>
            );
          })}
          
          {sortedPosts.length === 0 && (
            <div class="text-center py-12">
              <p class="text-slate-400 text-lg">目前還沒有文章</p>
            </div>
          )}
        </div>
        
        <!-- Tags Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            <!-- All Tags Section -->
            <GlowCard 
              class="mb-6" 
              glowColor="rgba(168, 85, 247, 0.3)"
              glowIntensity={400}
            >
              <div class="dark:bg-slate-800/90 bg-white/90 backdrop-blur-sm rounded-lg p-6 border dark:border-slate-700/50 border-gray-200/50">
              <h3 class="text-lg font-semibold text-white mb-4">所有標籤</h3>
              
              {uniqueTags.length > 0 ? (
                <div class="space-y-3">
                  <div class="p-2 rounded hover:bg-slate-700 transition-colors">
                    <a href="/blog" class="flex items-center justify-between text-slate-300">
                      <span>全部文章</span>
                      <span class="text-sm text-slate-500">({allPosts.length})</span>
                    </a>
                  </div>
                  
                  <div class="flex flex-wrap gap-2">
                    {uniqueTags.map((tag) => (
                      <Chip 
                        tag={tag}
                        count={tagCounts[tag]}
                        href={`/blog/tag/${tag}`}
                        variant="default"
                        size="sm"
                      />
                    ))}
                  </div>
                </div>
              ) : (
                <p class="text-slate-500">還沒有標籤</p>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>